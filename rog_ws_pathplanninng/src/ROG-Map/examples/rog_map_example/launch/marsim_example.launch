<launch>
    <!-- 1. 地图构建节点 -->
    <node name="map_builder" pkg="rog_map_example" type="marsim_example_node" output="screen">
        <rosparam command="load" file="$(find rog_map_example)/config/marsim_example.yaml"/>
    </node>

    <!-- 2. 静态TF发布 -->
    <node pkg="tf" type="static_transform_publisher" name="world_to_odom" args="0 0 0 0 0 0 world odom 100" />
    <node pkg="tf" type="static_transform_publisher" name="odom_to_base" args="0 0 0 0 0 0 odom base_link 100" />

    <!-- 3. RViz可视化 -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rog_map_example)/config/viz_orchard.rviz"/>
</launch>
